
@{
    ViewData["Title"] = "List";
}



@model List<Personel>



    <h2 class="text-center m-3 ">Personel List</h2>


    <div class="row">

        <div class="col-md-9 mx-auto ">


        <table class="table table-borderless table-hover ">

            <thead>
                <tr>
                    <th>id</th>
                    <th>name</th>
                    <th>address</th>
                    <th>gender</th>
                    <th>cv</th>
                    <th>go to profile</th>
                </tr>
            </thead>
            <tbody>



                @{


                    foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td> @Enum.GetName(typeof(Gender),item.Gender) </td>
                            <td>@item.Cv</td>
                            <td>
                                <a class="btn btn-outline-primary" asp-action="Profile" asp-controller="Personel" asp-route-id="@item.Id">
                                    @(item.Name + " 'ın profili")
                                </a>
                            </td>
                        </tr>
                    }


                }

            </tbody>

        </table>


        </div>
    </div>